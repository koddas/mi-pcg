<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<fx:root fx:id="rootWorldViewPane" stylesheets="@../styling.css" type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <BorderPane>
            <center>
                <ScrollPane fx:id="mapScrollPane" styleClass="edge-to-edge" BorderPane.alignment="CENTER">
                    <Pane fx:id="mapPane" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" />
                </ScrollPane>
            </center>
            <bottom>
                <StackPane fx:id="questPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="300.0" style="-fx-background-color: BLACK;">
                    <StackPane.margin>
                        <Insets left="40.0" right="40.0" />
                    </StackPane.margin>
                </StackPane>
            </bottom>
        </BorderPane>
    </center>

    <left>
        <BorderPane id="actionPane" style="-fx-background-color: BLACK;">
            <center>
                <ToolBar id="tbQuestTools" maxWidth="1.7976931348623157E308" orientation="VERTICAL" style="-fx-background-color: black;">
                    <Button id="btnToolCapture" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Capture" textOverrun="CENTER_WORD_ELLIPSIS" />
                    <Button id="btnToolDamage" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Damage" />
                    <Button id="btnToolDefend" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Defend" />
                    <Button id="btnToolEscort" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Escort" />
                    <Button id="btnToolExchange" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Exchange" />
                    <Button id="btnToolExperiment" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Experiment" />
                    <Button id="btnToolExplore" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Explore" />
                    <Button id="btnToolGather" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Gather" />
                    <Button id="btnToolGive" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Give" />
                    <Button id="btnToolGoto" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Goto" />
                    <Button id="btnToolKill" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Kill" />
                    <Button id="btnToolListen" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Listen" />
                    <Button id="btnToolRead" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Read" />
                    <Button id="btnToolRepair" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Repair" />
                    <Button id="btnToolReport" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Report" />
                    <Button id="btnToolSpy" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Spy" />
                    <Button id="btnToolStealth" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Stealth" />
                    <Button id="btnToolTake" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Take" />
                    <Button id="btnToolUse" maxWidth="1.7976931348623157E308" minWidth="-Infinity" mnemonicParsing="false" text="Use" />
                </ToolBar>
            </center>
        </BorderPane>
    </left>
    
   <right>
      <BorderPane maxWidth="1.7976931348623157E308">
          <top>
              <Label contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="GENERATED QUESTS" textAlignment="CENTER" textFill="white" underline="true" wrapText="true" BorderPane.alignment="TOP_CENTER">
                  <font>
                      <Font size="24.0" />
                  </font>
              </Label>
          </top>
          <center>
              <ToolBar id="tbQuestPCG" maxWidth="1.7976931348623157E308" orientation="VERTICAL" style="-fx-background-color: PINK;" StackPane.alignment="CENTER">
                  <StackPane.margin>
                      <Insets top="70.0" />
                  </StackPane.margin>
              </ToolBar>
          </center>
          <bottom>
              <StackPane>
                  <Button fx:id="btnBackToWorld" alignment="BASELINE_CENTER" maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#backWorldView" text="Back To World View" textAlignment="CENTER" wrapText="true">
                      <StackPane.margin>
                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                      </StackPane.margin></Button>
              </StackPane>
          </bottom>
       </BorderPane>
   </right>
</fx:root>
