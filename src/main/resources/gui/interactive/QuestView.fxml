<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root fx:id="rootWorldViewPane" stylesheets="@../styling.css" type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <fx:define>
        <ToggleGroup fx:id="questActionsTools"/>
        <ToggleGroup fx:id="questActions"/>
    </fx:define>
    <center>
        <BorderPane>
            <center>
                <ScrollPane fx:id="mapScrollPane" style="-fx-border-color: transparent lightgray transparent transparent; -fx-border-width: 2px;" styleClass="edge-to-edge" BorderPane.alignment="CENTER">
<!--                    <Pane fx:id="mapPane" disable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" />-->
                </ScrollPane>
            </center>
            <bottom>
                <FlowPane fx:id="questPane" hgap="5.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="300.0" style="-fx-border-width: 2px; -fx-border-color: lightgray; -fx-border-insets: 0;" vgap="5.0" BorderPane.alignment="CENTER_LEFT">
                    <FlowPane.margin>
                        <Insets left="40.0" right="40.0" />
                    </FlowPane.margin>
               <children>
                  <Button fx:id="questPlaceholder" mnemonicParsing="false" text="+" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
                </FlowPane>
            </bottom>
        </BorderPane>
    </center>

    <left>
        <BorderPane id="actionPane" style="-fx-background-color: BLACK;">
            <center>

                <ToolBar fx:id="tbQuestTools" orientation="VERTICAL" prefWidth="150.0" style="-fx-background-color: black;">
                    <ToggleButton id="CAPTURE" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="CAPTURE" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="DAMAGE" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="DAMAGE" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="DEFEND" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="DEFEND" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="ESCORT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="ESCORT" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="EXCHANGE" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="EXCHANGE" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="EXPERIMENT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="EXPERIMENT" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="EXPLORE" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="EXPLORE" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="GATHER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="GATHER" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="GIVE" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="GIVE" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="GO_TO" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="GOTO" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="KILL" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="KILL" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="LISTEN" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="LISTEN" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="READ" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="READ" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="REPAIR" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="REPAIR" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="REPORT" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="REPORT" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="SPY" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="SPY" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="STEALTH" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="STEALTH" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="TAKE" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="TAKE" toggleGroup="$questActionsTools" disable="true"/>
                    <ToggleButton id="USE" maxWidth="1.7976931348623157E308" minWidth="-Infinity" mnemonicParsing="false" text="USE" toggleGroup="$questActionsTools" disable="true"/>
               <padding>
                  <Insets right="10.0" />
               </padding>
                </ToolBar>
            </center>
         <padding>
            <Insets bottom="10.0" left="10.0" top="10.0" />
         </padding>
        </BorderPane>
    </left>
    
   <right>
      <BorderPane maxWidth="1.7976931348623157E308" style="-fx-background-color: black;">
          <top>
              <Label contentDisplay="CENTER" maxWidth="1.7976931348623157E308" text="GENERATED QUESTS" textAlignment="CENTER" textFill="white" underline="true" wrapText="true" BorderPane.alignment="TOP_CENTER">
                  <font>
                      <Font size="24.0" />
                  </font>
              </Label>
          </top>
          <center>
              <ToolBar id="tbQuestPCG" maxWidth="1.7976931348623157E308" orientation="VERTICAL" StackPane.alignment="CENTER">
                  <StackPane.margin>
                      <Insets top="70.0" />
                  </StackPane.margin>
              </ToolBar>
          </center>
          <bottom>
              <StackPane>
                  <Button fx:id="btnBackToWorld" alignment="BASELINE_CENTER" maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#backWorldView" text="Back To World View" textAlignment="CENTER" wrapText="true">
                      <StackPane.margin>
                          <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                      </StackPane.margin></Button>
              </StackPane>
          </bottom>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
       </BorderPane>
   </right>
</fx:root>
