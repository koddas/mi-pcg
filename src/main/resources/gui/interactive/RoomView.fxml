<?xml version="1.0" encoding="UTF-8"?>

<?import gui.controls.LabeledCanvas?>

<?import java.util.ArrayList?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.scene.layout.BorderPane"
	stylesheets="@../styling.css" xmlns:fx="http://javafx.com/fxml/1">
	<left>
		<fx:define>
			<ToggleGroup fx:id="brushes" />
		</fx:define>
		<ToolBar id="toolbox" orientation="VERTICAL"
			prefHeight="400.0" prefWidth="95.0" BorderPane.alignment="TOP_CENTER">
			<items>
				<Label text="Editor tools" />
				<ToggleButton contentDisplay="TOP"
					mnemonicParsing="false" text="Floor" toggleGroup="$brushes"
					onAction="#selectBrush">
					<graphic>
						<ImageView fitWidth="40.0" pickOnBounds="true"
							preserveRatio="true">
							<image>
								<Image url="@../../graphics/tiles/floor.png" />
							</image>
						</ImageView>
					</graphic>
				</ToggleButton>
				<ToggleButton contentDisplay="TOP"
					mnemonicParsing="false" text="Wall" toggleGroup="$brushes"
					onAction="#selectBrush">
					<graphic>
						<ImageView fitWidth="40.0" pickOnBounds="true"
							preserveRatio="true">
							<image>
								<Image url="@../../graphics/tiles/wall.png" />
							</image>
						</ImageView>
					</graphic>
				</ToggleButton>
				<ToggleButton contentDisplay="TOP"
					mnemonicParsing="false" text="Treasure" toggleGroup="$brushes"
					onAction="#selectBrush">
					<graphic>
						<ImageView fitWidth="40.0" pickOnBounds="true"
							preserveRatio="true">
							<image>
								<Image url="@../../graphics/tiles/treasure.png" />
							</image>
						</ImageView>
					</graphic>
				</ToggleButton>
				<ToggleButton contentDisplay="TOP"
					mnemonicParsing="false" text="Enemy" toggleGroup="$brushes"
					onAction="#selectBrush">
					<graphic>
						<ImageView fitWidth="40.0" pickOnBounds="true"
							preserveRatio="true">
							<image>
								<Image url="@../../graphics/tiles/enemy.png" />
							</image>
						</ImageView>
					</graphic>
				</ToggleButton>
				<ToggleButton fx:id="patternButton"
					contentDisplay="TOP" mnemonicParsing="false" wrapText="true"
					textAlignment="CENTER" text="Show patterns"
					onAction="#togglePatterns">
					<VBox.margin>
						<Insets>
							<top>20</top>
						</Insets>
					</VBox.margin>
				</ToggleButton>
				<Button contentDisplay="TOP" mnemonicParsing="false"
					wrapText="true" textAlignment="CENTER" text="Generate maps"
					onAction="#generateNewMaps">
					<VBox.margin>
						<Insets>
							<top>20</top>
						</Insets>
					</VBox.margin>
				</Button>
				<Button contentDisplay="TOP" mnemonicParsing="false"
					wrapText="true" textAlignment="CENTER" text="Display whole map"
					onAction="#handleButtonAction">
					<VBox.margin>
						<Insets>
							<top>20</top>
						</Insets>
					</VBox.margin>
				</Button>
			</items>
		</ToolBar>
	</left>
	<center>
		<BorderPane>


			<center>

				<BorderPane>

					<center>
						<StackPane alignment="CENTER" fx:id="mapPane" />

					</center>
					<right>
					
						<VBox> 
						<HBox spacing="350">								
						<GridPane alignment="CENTER" fx:id="space" />
												
					<GridPane fx:id="legend" id="legend" />
					</HBox>
							<GridPane alignment="CENTER" fx:id="minimap" hgap="0" vgap="0" />


						</VBox>
						
					</right>

					<!-- <top> <BorderPane> <center> <Button contentDisplay="TOP" fx:id="rightButton" 
						mnemonicParsing="false" wrapText="true" textAlignment="CENTER" text="right" 
						onAction="#handleButtonAction"> </Button> <Button contentDisplay="TOP" fx:id="leftButton" 
						mnemonicParsing="false" wrapText="true" textAlignment="CENTER" text="left" 
						onAction="#handleButtonAction"> </Button> <Button contentDisplay="TOP" fx:id="upButton" 
						mnemonicParsing="false" wrapText="true" textAlignment="CENTER" text="up" 
						onAction="#handleButtonAction"> </Button> <Button contentDisplay="TOP" fx:id="botButton" 
						mnemonicParsing="false" wrapText="true" textAlignment="CENTER" text="bot" 
						onAction="#handleButtonAction"> </Button> </center> </BorderPane> </top> -->
				</BorderPane>

			</center>





			<left>
				<VBox>
					<children>
						<StackPane alignment="CENTER" fx:id="generatedMapsLabel"
							id="generatedMapsLabel">
							<Label text="Generated maps" />
						</StackPane>
						<StackPane alignment="CENTER">
							<fx:define>
								<ArrayList fx:id="mapDisplays">
									<LabeledCanvas fx:id="map0" />
									<LabeledCanvas fx:id="map1" />
									<LabeledCanvas fx:id="map2" />
									<LabeledCanvas fx:id="map3" />
								</ArrayList>
							</fx:define>
							<children>
								<VBox alignment="CENTER" spacing="15">
									<children>
										<fx:reference source="map0" />
										<fx:reference source="map1" />
										<fx:reference source="map2" />
										<fx:reference source="map3" />
									</children>
								</VBox>
							</children>
						</StackPane>
					</children>
				</VBox>
			</left>
		</BorderPane>
	</center>
</fx:root>
